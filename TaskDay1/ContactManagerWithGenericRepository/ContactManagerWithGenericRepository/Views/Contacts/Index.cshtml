@model ContactManagerWithGenericRepository.Models.ContactViewModel

@{
    ViewBag.Title = "View";
}

<h2>View</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<ul class="pagination">
    @{
        for (var i = 1; (i <= Math.Ceiling(Model.TotalContacts / 25.0)); i++) {
            if (i == Model.CurrentPage) {
                <text><li class="active"><a href="/Contacts/Index/@i"> @i</a></li></text>
        } else {
                <text><li><a href="/Contacts/Index/@i"> @i</a></li></text>
        }

    }
}
</ul>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Contacts[0].FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contacts[0].LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contacts[0].Birthday)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contacts[0].PhoneNumber)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Contacts) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Birthday)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
